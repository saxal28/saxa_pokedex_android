<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/emptyListContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="true"
    >

    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:translationY="100dp"


        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/card_pokeball_light_gray"
        />

        <TextView
            android:id="@+id/emptyListTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Sorry!"
            android:textColor="@color/text"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            app:layout_constraintTop_toTopOf="@id/emptyListTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginTop="40sp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="We couldn't find that pokemon!"
            android:textColor="@color/text"
            android:textSize="18sp" />

    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:translationY="200dp"

        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_poke_shadow_sweat"
        />

</androidx.constraintlayout.widget.ConstraintLayout>