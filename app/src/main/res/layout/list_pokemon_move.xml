<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="level"
            type="String" />
        <variable
            name="name"
            type="String" />
        <variable
            name="image"
            type="Integer" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="5dp"
        >

        <ImageView
            android:id="@+id/moveImage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="40dp"
            android:layout_height="40dp"
            tools:src="@drawable/ic_levelbackground"
            />

        <TextView
            android:id="@+id/moveLevel"
            app:layout_constraintTop_toTopOf="@id/moveImage"
            app:layout_constraintBottom_toBottomOf="@id/moveImage"
            app:layout_constraintStart_toStartOf="@id/moveImage"
            app:layout_constraintEnd_toEndOf="@id/moveImage"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{level}"
            tools:text="24"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <TextView
            app:layout_constraintTop_toTopOf="@id/moveImage"
            app:layout_constraintBottom_toBottomOf="@id/moveImage"
            app:layout_constraintStart_toEndOf="@id/moveImage"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginLeft="20dp"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{name}"
            tools:text="Ice Beam"
            android:textSize="18sp"
            android:textColor="@color/textGray"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>